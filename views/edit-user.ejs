<% include layout %>
<a href="/"><button class="btn btn-primary">Home</button></a>
<br><br>
<a href="/users"><button class="btn btn-primary">Go Back</button></a>
<section name="content">
    <div class="container">
            <% if (typeof successMsg != 'undefined' && successMsg) { %>
                <div class="alert alert-info"><%- successMsg %></div>
                <% } else if(typeof errorMsg != 'undefined' && errorMsg) { %>
                        <div class="alert alert-danger"><%- errorMsg %></div>
                        <% } %>
<form class="form-horizontal" role="form" method="post" action="">
   <br>
    <div class="form-group">
            <label for="email" class="col-sm-2 control-label">Index</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="index" name="index" placeholder="Index" value="<% if (typeof userDetail != 'undefined') { %><%= userDetail.index %><% } %>">
            </div>
        </div>

        <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Group</label>
                <div class="col-sm-10">
                    <select name="role" class="form-control">
                        <option value="">Select Group</option>
                        <option value="2" <% if (typeof userDetail != 'undefined' && userDetail.role==2) { %>Selected<% } %>>Group 1</option>
                        <option value="3" <% if (typeof userDetail != 'undefined' && userDetail.role==3) { %>Selected<% } %>>Group 2</option>
                        </select>
                </div>
            </div>

    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Full Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" placeholder="Full Name" value="<% if (typeof userDetail != 'undefined') { %><%= userDetail.name %><% } %>">
        </div>
    </div>

    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" placeholder="example@domain.com" value="<% if (typeof userDetail != 'undefined') { %><%= userDetail.email %><% } %>">
        </div>
    </div>

  
    
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <input id="submit" name="submit" type="submit" value="Save changes" class="btn btn-primary">
        </div>
    </div>
    
</form>
    </div>
    </section>